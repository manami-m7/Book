<!DOCTYPE html>
<html>
  <body>
    <p class="flash"><%= flash[:notice] %></p>
    <h1>Books</h1>
      <table class="index">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>

          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td class="index-td-body"><%= book.body %></td>
              <td class="index-td"><%= link_to "Show", book_path(book.id) %></td>
              <td class="index-td"><%= link_to "Edit", edit_book_path(book.id) %></td>
              <td class="index-td-destroy"><%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: "Are you sure?"} %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <h2 class="new-book">New book</h2>
      <%= form_for @book do |f| %>
        <% if @book.errors.any? %>
          <h3><%= @book.errors.count %>error prohibited this book from being saved:</h3>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        <% end %>

        <p>Title</p>
        <%= f.text_field :title %>

        <p>Body</p>
        <%= f.text_area :body %>

        <br><%= f.submit 'Create Book' %></br>

      <% end %>
