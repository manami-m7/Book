<!DOCTYPE html>
<html>
  <body>
    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(@book) do |f| %>

      <p>Title</p>
      <%= f.text_field :title %>

      <p>Body</p>
      <%= f.text_area :body %>

      <br><%= f.submit 'Update Book' %></br>

    <% end %>

    <div class="style"><%= link_to "Show", book_path(@book.id) %></div>
    <div class="style"><%= link_to "Back", '/books' %></div>
  </body>
</html>
